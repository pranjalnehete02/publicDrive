spring.application.name=public-drive-backend
spring.security.oauth2.resourceserver.jwt.public-key-location=classpath:publicKey.pem
# Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/public_drive?useSSL=false&serverTimezone=UTC
spring.datasource.username=root  # Replace with your MySQL username
spring.datasource.password=root  # Replace with your MySQL password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.jpa.hibernate.ddl-auto=update  # Automatically updates the schema, you can change to validate, create-drop, or none depending on your needs
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.format_sql=true  # Format SQL for readability
spring.jpa.properties.hibernate.show_sql=true  # Show SQL queries in console

# Connection pool configuration (optional)
spring.datasource.hikari.maximum-pool-size=10  
spring.datasource.hikari.minimum-idle=5  
spring.datasource.hikari.idle-timeout=30000  

# JWT Configuration
# Set your secret key for JWT signing (ensure this is kept secret and secure)
jwt.secret=your_secret_key_here  # Replace with your actual JWT secret key (use an environment variable or vault for production)
jwt.expiration=3600000  # Token expiration in milliseconds (1 hour)
jwt.prefix=Bearer

# Spring Security OAuth2 Resource Server Configuration
spring.security.oauth2.resourceserver.jwt.secret-key=your_secret_key_here  # The same JWT secret you use for signing tokens
spring.security.oauth2.resourceserver.jwt.jwk-set-uri=  # Optionally, provide the URI for a JWK set if you are using RS256 (public key)
# OR for symmetric key-based signing
# spring.security.oauth2.resourceserver.jwt.secret-key=your_secret_key_here

# Other Configurations
server.port=8080  
logging.level.org.springframework.web=DEBUG  # Enable detailed logging for web-related Spring components (optional)
